@model SingASong.Models.ViewModels.CartContents
@{
}
<div class="row">
    <div class="col col-lg-8">
        <a asp-controller="Cart" asp-action="ShoppingCart" class="go-back-btn">&lt; Go Back</a>
        <div id="payment-details">
            <h2>Payment Details</h2>

            <div>
                <strong>Items in Cart:</strong> <span id="item-count">3</span>
            </div>
            <div>
                <strong>Cart Items:</strong>
                <ul class="list-group">
                    @foreach (var item in Model.items)
                    {
                        <li class="list-group-item d-flex justify-content-around">
                            <span class="text-body">@item.Name</span>
                            <span class="text-muted">@(item.Price - item.Discount)</span>
                        </li>
                    }
                </ul>
            </div>
            <div>
                <strong>Total Price (after discounts)</strong> Rs.<span id="original-price">@Model.CartPrice</span>
            </div>
            
            <div>
                <strong>Payment Method:</strong> <span id="payment-method">Credit Card</span>
            </div>

            <div id="payment-button">
                <button onclick="redirectToPayment()">Pay: Rs.<span id="total-amount">@Model.CartPrice</span></button>
            </div>
        </div>

    </div>
    <div class="col col-lg-4">
        <div class="payment-container">
            <h2>Select Payment Mode</h2>

            <div class="payment-options">
                <label for="creditCard">
                    <input type="radio" id="creditCard" name="paymentMode" value="creditCard">
                    Credit Card
                </label>
                <label for="upi">
                    <input type="radio" id="upi" name="paymentMode" value="upi">
                    UPI
                </label>
                <label for="wallet">
                    <input type="radio" id="wallet" name="paymentMode" value="wallet">
                    Wallet
                </label>
                <!-- Add more payment options as needed -->
            </div>

            <form>
                <div class="form-group" id="creditCardDetails">
                    <label for="cardNumber">Card Number</label>
                    <input type="text" class="form-control" id="cardNumber" placeholder="Enter card number">
                    <label for="nameOnCard">Name on Card</label>
                    <input type="text" class="form-control" id="nameOnCard" placeholder="Enter name on card">
                    <label for="validity">Validity</label>
                    <input type="text" class="form-control" id="validity" placeholder="MM/YY">
                    <label for="cvv">CVV</label>
                    <input type="text" class="form-control" id="cvv" placeholder="Enter CVV">
                </div>

                <div class="form-group" id="upiDetails">
                    <label for="upiId">UPI ID</label>
                    <input type="text" class="form-control" id="upiId" placeholder="Enter UPI ID">
                </div>

                <div class="form-group wallet-options" id="walletOptions">
                    <label for="paytm">
                        <input type="radio" id="paytm" name="walletType" value="paytm">
                        Paytm
                    </label>
                    <label for="amazon">
                        <input type="radio" id="amazon" name="walletType" value="amazon">
                        Amazon Wallet
                    </label>
                </div>

                <button type="button" class="btn btn-primary" onclick="processPayment()">Proceed to Payment</button>
            </form>
        </div>
    </div>
</div>
