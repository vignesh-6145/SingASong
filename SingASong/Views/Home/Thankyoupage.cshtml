<style>

    body {
        margin: 0;
        padding: 0;
        background: white;
    }

    form {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        position: relative;
        z-index: 1;
        background: #ffffff;
        opacity: 99%;
        max-width: 500px;
        margin: 100px auto 50px;
        margin-top: 50px;
        padding: 10px 35px 20px 35px;
        text-align: center;
        box-shadow: 0 0 20px 0 rgba(0,0,0,0.2), 0 5px 5px 0 rgba(0,0,0,0.24);
        border-radius: 10px
    }

        form p {
            font: 20px;
            font-size: larger;
            padding: 1px;
            text-align: center;
        }



    .register {
        text-transform: capitalize;
        outline: 0;
        border-radius: 10px;
        background: purple;
        width: 25%;
        border: 0;
        padding: 15px;
        color: #ffffff;
        font-size: 14px;
        cursor: pointer;
    }

    form input[type=button:hover], form input[type=button:active], form input[type=button:focus] {
        background-color: thistle;
        transition: all ease-in 0s;
    }

</style>
<body>
    <header class="head"><h2><i><center>Sing A Song</center></i></h2></header>
    <form>
        <p>Registration Successful</p>
        <img src="~/lib/tick.jpg" width="75" height="75" />
        <p>Thank you for registering. Unlock you musical journey</p>


        <a href='@Url.Action("Login","user")'>
            <input type="button" class="register" value="Home" />
        </a>

        <a href='@Url.Action("Login","user")'>
            <input type="button" class="register" value="Login" />
        </a>
    </form>

</body>
